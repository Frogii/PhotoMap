<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhotoMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.PhotoMap">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentTheme" parent="Theme.PhotoMap">
        <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="CategoriesCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_selector</item>
        <item name="android:paddingLeft">@dimen/category_left_padding</item>
        <item name="android:checked">true</item>
        <item name="android:layout_marginStart">@dimen/category_start_margin</item>
        <item name="android:layout_marginTop">@dimen/category_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/category_bottom_margin</item>
    </style>

    <style name="FloatingButtonPhoto" parent="Widget.Design.FloatingActionButton">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/floating_button_ic_photo</item>
        <item name="android:src">@drawable/ic_floating_button_photo</item>
    </style>

    <style name="FloatingButtonFollow" parent="Widget.Design.FloatingActionButton">
        <item name="colorSecondary">@color/floating_button_enable</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:src">@drawable/ic_floating_button_follow</item>
    </style>

    <style name="CustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="DialogCustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="InfoWindowCustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/info_window_text_size</item>
    </style>

    <style name="PhotoCustomText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="LoginCustomText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/login_big_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginCustomButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_google</item>
        <item name="android:text">@string/log_in_button</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

</resources>